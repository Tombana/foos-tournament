<div class="col-md-12">

<div class="tab2-content tab2-content-classification">

<div class="col-md-6">
<table class="table table-condensed table-striped">
<tr><th class="col-md-1 text-right">Pos</th><th class="col-md-4 text-left">Player</th><th class="col-md-2 text-right">Points</th><th class="col-md-2 text-right"># Matches</th></tr>
<% @classification.each do |c| %>
    <tr>
        <td class="text-right"><%= c[:position] %></td>
        <td class="text-left"><%= @players[c[:player_id]].name %></td>
        <td class="text-right"><span title="<%= "#{'%.2f' % c[:points]}" %>"><%= "#{'%.0f' % c[:points]}" %></span></td>
        <td class="text-right"><%= c[:num_matches] %></td>
    </tr>
<% end %>
</table>
</div>

</div>

<div class="tab2-content tab2-content-matches">

<div class="col-md-12">
<h4>Matches played</h4>
<table class="table table-striped table-condensed">
    <tr>
        <th>Time</th>
        <th>Player 1</th>
        <th>Player 2</th>
        <th class="text-center">Score</th>
        <th>Player 3</th>
        <th>Player 4</th>
        <th class="text-center">Duration</th>
        <th class="text-center">Replays</th>
    </tr>
<% @matches.each do |m| %>
<tr>
<td><%= m.get_time() %></td>
<td><%= @players[m.players[0]].name %></td>
<td><%= @players[m.players[1]].name %></td>
<td class="text-center"><%= m.scores[0].to_s %>-<%= m.scores[1].to_s %></td>
<td><%= @players[m.players[2]].name %></td>
<td><%= @players[m.players[3]].name %></td>
<td class="text-center"><%= m.get_duration() %></td>
<td class="text-center">coming soon...</td>
</tr>
<% end %>
</table>
</div>

</div>

